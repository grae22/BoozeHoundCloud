
@{
  ViewBag.Title = "Index";
}

<h2>Accounts</h2>

<table id="bankAccountsTable" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
    </tr>
  </thead>
</table>

@section scripts
{
  <script>
    $(document).ready(function() {
      $('#bankAccountsTable').DataTable({
        ajax:
        {
          url: '/api/Core/Account',
          dataSrc: ''
        },
        columns:
        [
          { data: 'Name' },
          { data: 'Balance' }
        ]
      });
    });
  </script>
}
